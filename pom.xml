            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>fitnesspro-core</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>fitnesspro-service-general-module</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>fitnesspro-service-scheduler-module</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>fitnesspro-service-workout-module</artifactId>
                <version>${project.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <modules>
        <module>fitnesspro-core</module>
        <module>fitnesspro-shared-communication</module>
        <module>fitnesspro-service</module>
        <module>fitnesspro-service-general-module</module>
        <module>fitnesspro-service-scheduler-module</module>
        <module>fitnesspro-service-workout-module</module>
        <module>fitnesspro-service-scheduled-task</module>
        <module>fitnesspro-service-model</module>
        <module>fitnesspro-service-log</module>
        <module>fitnesspro-service-jpa</module>
        <module>fitnesspro-service-authentication</module>
        <module>fitnesspro-service-communication</module>
